{
  "manifest_version": 3,
  "name": "Crunchyroll Helper",
  "version": "1.0",
  "description": "Enhances your Crunchyroll experience by showing anime ratings and more",
  "permissions": [
      "activeTab",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
      {
          "matches": ["*://*.crunchyroll.com/*"],
          "js": ["content.js"]
      }
  ],
  "host_permissions": [
      "*://*.crunchyroll.com/*"
  ]
}