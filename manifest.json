{
  "manifest_version": 3,
  "name": "Better Browsing for Crunchyroll",
  "version": "1.1",
  "description": "See ratings instantly and find top-rated shows easily on Crunchyroll.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
      "activeTab"
  ],
  "content_scripts": [
      {
          "matches": ["*://*.crunchyroll.com/*"],
          "js": ["content.js"]
      }
  ],
  "host_permissions": [
      "*://*.crunchyroll.com/*"
  ]
}